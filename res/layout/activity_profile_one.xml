<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="15dp"
    android:orientation="vertical" >
    
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
                  	android:layout_height="wrap_content"
      		android:background="@color/innerbackground"

        	android:padding="15dp"
        	        	 >

      

			    <ImageView
			        android:id="@+id/profileImageView"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
					    
					      <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 android:id="@+id/profileEditIcon"
                                   android:layout_alignParentRight="true"
                              android:layout_alignBottom="@+id/profileImageView"
                                        android:clickable="true"

                                          android:onClick="editProfile" />

					      <TextView
					          android:id="@+id/usernameView"
					          android:layout_width="wrap_content"
					          android:layout_height="wrap_content"
					           android:layout_toRightOf="@+id/profileImageView"
                              android:layout_marginLeft="12dp"
					          android:text="@string/usernameText"
                              android:layout_centerVertical="true"
					          android:textAppearance="?android:attr/textAppearanceSmall"
					          android:textColor="@color/textbody" />

					      <TextView
					          android:id="@+id/locView"
					          android:layout_width="wrap_content"
					          android:layout_height="wrap_content"
					          android:layout_below="@+id/usernameView"
                              android:layout_toRightOf="@+id/profileImageView"
                              android:layout_marginLeft="12dp"
					          android:layout_marginTop="40dp"
					          android:text="@string/location"
					          android:textAppearance="?android:attr/textAppearanceSmall"
					          android:textColor="@color/textbody" />
					    
	</RelativeLayout>
					    
    
       <RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
      		android:layout_marginTop="39dp"
           android:padding="15dp"
      		android:background="@color/innerbackground"


        	>
    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/bikesHeading"
        android:id="@+id/bikesHeading"
        android:textColor="@color/textbody"
        android:textStyle="bold"
         android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <ListView
        android:id="@+id/bikeList"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/plusIcon"
        android:layout_alignParentStart="true"

        	/>

  

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="addBike"
       />


</RelativeLayout>
					    
    
    
</LinearLayout>
    


